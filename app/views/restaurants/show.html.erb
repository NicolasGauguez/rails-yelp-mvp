<h2>Restaurant: <%= @restaurant.name %></h2>
<p>Address: <%= @restaurant.address %></p>
<p>Category: <%= @restaurant.category %></p>

<h3>Reviews</h3>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %><% review.rating %></li>
    <li class="list-group-item"><%= review.rating %>/5</li>
  <% end %>
</ul>

<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %> |
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>